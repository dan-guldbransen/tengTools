@model Litium.Accelerator.ViewModels.Framework.FavoritesViewModel

<div class="offcanvas offcanvas-end" tabindex="-1" id="favorites" aria-labelledby="favoritesLabel">

	<!-- Header -->
	<div class="offcanvas-header bg-dark">
		<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
	</div>

	<div class="offcanvas-body">
		<h3 class="mt-3">@Html.WebSiteString("favorites.header")</h3>
		<hr />
		<ul class="list-group mb-3 favorites-list">
			@foreach (var product in Model.Products)
			{
				<li class="list-group-item border-0 d-flex align-items-center justify-content-between">
					<a href="@product.Url">
						<p class="mb-0">@product.Name</p>
					</a>
					<a class="deletefavorites-btn cursor-hover">
						<i class="bi bi-trash" data-variantid="@product.Id"></i>
					</a>
				</li>
			}
		</ul>
	</div>
</div>
