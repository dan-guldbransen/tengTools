@model Litium.Accelerator.ViewModels.Framework.FooterViewModel
<footer class="footer bg-dark pt-5 mt-5 position-relative">
	<div class="container">

		@if (!string.IsNullOrEmpty(Model.TopText))
		{
<h2 class="text-white my-5 text-center">
	@Model.TopText
</h2>}

		@if (Model.HasCTASection)
		{
    <div class="my-5 py-3 fs-6 text-uppercase d-flex justify-content-center">
        @if (Model.Newsletter != null)
        {
            @: <a class="mx-3 btn px-5 py-3 btn-primary @(Model.Newsletter != null ? "" : "d-none")" href="@Model.Newsletter.Href">@Model.Newsletter.Text</a>
        }
        @if (Model.GetOrganised != null)
        {
            @: <a class="mx-3 btn px-5 py-3 btn-secondary cta-arrow @(Model.GetOrganised != null ? "" : "d-none")" href="@Model.GetOrganised.Href">@Model.GetOrganised.Text</a>
        }

    </div>}

		@if (Model.SectionList.Any())
		{
<div class="row my-5 pb-3 text-white text-center text-lg-start">
	@foreach (var sectionItem in Model.SectionList)
	{
<div class="col-6 col-lg-@(Model.SectionCol)">
	<h2 class="text-uppercase fw-bold fs-6 mt-4 @(!string.IsNullOrEmpty(sectionItem.SectionTitle) ? "" : "d-none")">@sectionItem.SectionTitle</h2>
	<div class="mt-2">
		@if (sectionItem.SectionLinkList != null)
		{
			foreach (var linkItem in sectionItem.SectionLinkList)
			{
<a class="menu-item d-block text-decoration-none text-white light-text" href="#">@linkItem.Text</a>}
}
	</div>
</div>}
</div>}

		<div class="row mt-5 pt-3 justify-content-center text-center">
			<div class=" col-12 col-md-3 text-white text-uppercase light-text fs-5 @(string.IsNullOrEmpty(@Model.SocialMediaText) ? "d-none" : "")">@Model.SocialMediaText</div>
		</div>

		@Html.Partial("Framework/SocialMediaLinks", Model.SocialMedia)

		<div class="row"><div class="col-12"><hr /></div></div>

		<!-- "Vision" -->
		@if (Model.HasVisionSection)
		{
<div class="row mt-5 pb-5 justify-content-center">
	<div class="w-25 text-white fw-bold fs-6 text-center @(!string.IsNullOrEmpty(Model.VisionHeader) ? "" : "d-none")">@Model.VisionHeader</div>
	<div class="row mt-4 justify-content-center text-left">
		<div class="vision-text text-white-50 d-inline-block @(!string.IsNullOrEmpty(Model.VisionText) ? "" : "d-none")">@Model.VisionText</div>
	</div>
</div>}

		<!-- Disclaimer -->
		<div class="row text-center py-5">
			<div class="col-12"><p class="text-white-50 fw-lighter legal-text">© @DateTime.Now.Year @Model.Legal</p></div>
		</div>

	</div>
	@Html.ImageFor(x => x.Logo, maxSize: new Size(380, -1), htmlAttributes: new { @class = "footer-logo"})
</footer>